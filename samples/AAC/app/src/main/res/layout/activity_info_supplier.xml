<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="it.unive.dais.cevid.aac.SupplierInfoActivity"
    android:id="@+id/supply_info_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView style="@style/Field.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/supply_title"
            android:textAlignment="center"/>
        <View style="@style/Divider"/>

        <LinearLayout style="@style/Field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/supply_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/supply_type"/>
        </LinearLayout>

        <LinearLayout style="@style/Field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/supply_iva"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/supply_iva"/>
        </LinearLayout>

        <LinearLayout style="@style/Field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/supply_adrr"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/supply_address"/>
        </LinearLayout>

        <View style="@style/Divider"/>
        <Button
            android:id="@+id/button_supply_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/supply_button"
            android:layout_gravity="end"
            />
    </LinearLayout>
</RelativeLayout>

